<h1>คุณคือ <%= current_user&.full_name %></h1>
<div class="container-fluid h-100">
  <div class="row justify-content-center h-100">
    <div class="col-md-4 col-xl-3 chat"><div class="card mb-sm-3 mb-md-0 contacts_card">
      <div class="card-header">
        <div class="input-group">
          <input type="text" placeholder="Search..." name="" class="form-control search">
          <div class="input-group-prepend">
            <span class="input-group-text search_btn"><i class="fas fa-search"></i></span>
          </div>
        </div>
      </div>
      <input type="hidden" id="senderID" value="<%= current_user&.id %>">
      <input type="hidden" id="recipientID" value="<%= @recipient&.id %>">
      <input type="hidden" id="roomID" value="<%= @chat_room&.room_id %>">
      <div class="card-body contacts_body">
        <ui class="contacts contacts-<%= current_user&.id %>">
          <%= render 'messages/contacts' %>
        </ui>
      </div>
      <div class="card-footer"></div>
    </div></div>
    <div class="col-md-8 col-xl-6 chat">
      <div class="card">
        <div class="card-header msg_head">
          <div class="d-flex bd-highlight">
            <div class="img_cont">
              <img src="<%= @recipient&.photo %>" class="rounded-circle user_img" id="chatWithPhoto-<%= current_user&.id %>">
              <span class="online_icon"></span>
            </div>
            <div class="user_info">
              <span id="chatWithName-<%= current_user&.id %>">Chat with <%= @recipient&.full_name %></span>
              <p id="messagesCount-<%= current_user&.id %>"><%= @messages_total&.count%> Messages</p>
            </div>
            <div class="video_cam">
              <span><i class="fas fa-video"></i></span>
              <span><i class="fas fa-phone"></i></span>
            </div>
          </div>
          <span id="action_menu_btn"><i class="fas fa-ellipsis-v"></i></span>
          <div class="action_menu">
            <ul>
              <li><i class="fas fa-user-circle"></i> View profile</li>
              <li><i class="fas fa-users"></i> Add to close friends</li>
              <li><i class="fas fa-plus"></i> Add to group</li>
              <li><i class="fas fa-ban"></i> Block</li>
            </ul>
          </div>
        </div>
        <div class="card-body msg_card_body chat-room-<%= current_user&.id %>">
          <%= render 'messages/messages' %>
        </div>
        <div class="card-footer">
          <div class="input-group">
            <div class="input-group-append">
              <span class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></span>
            </div>
            <textarea onkeypress="return runScript(event)" class="form-control type_msg" placeholder="Type your message..."></textarea>
            <div class="input-group-append">
              <span class="input-group-text send_btn" id="send"><i class="fas fa-location-arrow"></i></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>

  let temp_message = 0;
  $('.chat-room-'+ <%= current_user&.id %>).animate({ scrollTop: $(document).height() }, 'slow');
  $('#send').click(function() {
    sendMsg();
  });

  function runScript(e) {
    //See notes about 'which' and 'key'
    if (e.keyCode == 13) {
      sendMsg();
      return false;
    }
  }

  function sendMsg() {
    temp_message += 1;
    if ($('.type_msg').val() != '') {
      $.ajax({
        url: '/messages/chat',
        type: 'get',
        dataType: 'js',
        data: {
          messages: $('.type_msg').val(),
          typing: false,
          photo: "<%= current_user&.photo %>",
          sender_id: $('#senderID').val(),
          recipient_id: $('#recipientID').val(),
          room_id: $('#roomID').val(),
          temp_message: temp_message
        }
      });
    }
    $('.type_msg').val('');
  }

  $('.type_msg').keydown(function() {
    $('#typeMessages').show();
    $.ajax({
      url: '/messages/chat',
      type: 'get',
      dataType: 'json',
      data: {
        messages: 'กำลังพิมพ์...',
        typing: true,
        photo: "<%= current_user&.photo %>",
        sender_id: $('#senderID').val(),
        recipient_id: $('#recipientID').val()
      }
    });
  });

  function showChat(id, recipientID) {
    $('#recipientID').val(recipientID)
    $('.contact').removeClass('active');
    $('#'+ id).addClass('active');
    $.ajax({
      url: '/messages/change_chat',
      type: 'get',
      dataType: 'json',
      data: {
        sender_id: <%= current_user&.id %>,
        recipient_id: recipientID
      }
    });
  }
</script>
