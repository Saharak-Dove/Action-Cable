  }

  $('#searchContacts').keyup(function () {
    search = $('.search-<%= current_user&.id %>').val();
    $.ajax({
      url: '/messages/search',
      type: 'get',
      dataType: 'json',
      data: {
        search: search,
        sender_id: $('#senderID').val(),
        recipient_id: $('#recipientID').val()
      }
    });
  });
</script>
