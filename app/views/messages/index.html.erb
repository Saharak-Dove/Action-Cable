<h1>คุณคือ <%= current_user&.full_name %></h1>
<div class="container-fluid h-100">
  <div class="row justify-content-center h-100">
    <div class="col-md-4 col-xl-3 chat"><div class="card mb-sm-3 mb-md-0 contacts_card">
      <div class="card-header">
        <div class="input-group">
          <input type="text" placeholder="Search..." name="" class="form-control search">
          <div class="input-group-prepend">
            <span class="input-group-text search_btn"><i class="fas fa-search"></i></span>
          </div>
        </div>
      </div>
      <div class="card-body contacts_body">
        <ui class="contacts">
        <li class="active">
          <div class="d-flex bd-highlight">
            <div class="img_cont">
              <img src="<%= @photo %>" class="rounded-circle user_img">
              <span class="online_icon"></span>
            </div>
            <div class="user_info">
              <span><%= @recipient&.full_name %></span>
              <p><%= @recipient&.full_name %> is online</p>
            </div>
          </div>
        </li>
        </ui>
      </div>
      <div class="card-footer"></div>
    </div></div>
    <div class="col-md-8 col-xl-6 chat">
      <div class="card">
        <div class="card-header msg_head">
          <div class="d-flex bd-highlight">
            <div class="img_cont">
              <img src="<%= @photo %>" class="rounded-circle user_img">
              <span class="online_icon"></span>
            </div>
            <div class="user_info">
              <span>Chat with <%= @recipient&.full_name %></span>
              <p><%= @messages.count %> Messages</p>
            </div>
            <div class="video_cam">
              <span><i class="fas fa-video"></i></span>
              <span><i class="fas fa-phone"></i></span>
            </div>
          </div>
          <span id="action_menu_btn"><i class="fas fa-ellipsis-v"></i></span>
          <div class="action_menu">
            <ul>
              <li><i class="fas fa-user-circle"></i> View profile</li>
              <li><i class="fas fa-users"></i> Add to close friends</li>
              <li><i class="fas fa-plus"></i> Add to group</li>
              <li><i class="fas fa-ban"></i> Block</li>
            </ul>
          </div>
        </div>
        <div class="card-body msg_card_body">
          <% @messages.each do |message| %>
            <% if message.recipient_id == current_user&.id %>
              <div class="d-flex justify-content-start mb-4">
                <div class="img_cont_msg">
                  <img src="<%= @photo %>" class="rounded-circle user_img_msg">
                </div>
                <div class="msg_cotainer">
                  <%= message&.messages %>
                  <span class="msg_time"><%= message&.created_at&.strftime("%H:%M") %>, Today</span>
                </div>
              </div>
            <% else %>
              <div class="d-flex justify-content-end mb-4">
                <div class="msg_cotainer_send">
                  <%= message&.messages %>
                  <span class="msg_time_send"><%= message&.created_at&.strftime("%H:%M") %>, Today</span>
                </div>
                <div class="img_cont_msg">
                <img src="<%= @photo_you %>" class="rounded-circle user_img_msg">
                </div>
              </div>
            <% end %>
          <% end %>
          <div id="messages-<%= current_user&.id %>"></div>
          <div id="typeMessages"></div>
        </div>
        <div class="card-footer">
          <div class="input-group">
            <div class="input-group-append">
              <span class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></span>
            </div>
            <textarea onkeypress="return runScript(event)" class="form-control type_msg" placeholder="Type your message..."></textarea>
            <div class="input-group-append">
              <span class="input-group-text send_btn" id="send"><i class="fas fa-location-arrow"></i></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>

  $('#send').click(function() {
    sendMsg();
  });

  function runScript(e) {
    //See notes about 'which' and 'key'
    if (e.keyCode == 13) {
      sendMsg();
      return false;
    }
  }

  function sendMsg() {
    if ($('.type_msg').val() != '') {
      $.ajax({
        url: '/messages/chat',
        type: 'get',
        dataType: 'json',
        data: {
          messages: $('.type_msg').val(),
          typing: false,
          photo: "<%= @photo_you %>",
          sender_id: <%= current_user&.id %>,
          recipient_id: <%= @recipient&.id %>
        }
      });
    }
    $('.type_msg').val('');
  }

  $('.type_msg').keydown(function() {
    $('#typeMessages').show();
    $.ajax({
      url: '/messages/chat',
      type: 'get',
      dataType: 'json',
      data: {
        messages: 'กำลังพิมพ์...',
        typing: true,
        photo: "<%= @photo_you %>",
        sender_id: <%= current_user&.id %>,
        recipient_id: <%= @recipient&.id %>
      }
    });
  });
</script>
