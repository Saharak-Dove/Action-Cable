<!DOCTYPE html>
<html>
  <head>
    <title>Action Cable</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.js"></script>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-color" id="navbar">
        <a class="btn btn-outline-dark my-2 my-sm-0" href="<%= homes_path %>">Face Dove</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a class="btn btn-outline-light my-2 my-sm-0" href="<%= messages_path %>"><i class="fas fa-comment"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a class="btn btn-outline-warning my-2 my-sm-0" href="<%= messages_path %>"><i class="fas fa-bell"></i></a>
        <div class="collapse navbar-collapse offset-3" id="navbarSupportedContent">
          <div class="wrap-input100 validate-input center" data-validate = "Search...">
          <input class="input50" type="text" placeholder="Search...">
          <span class="focus-50"></span>
          <span class="symbol-input100">
            <i class="fas fa-search"></i>
          </span>
        </div>
        <div class="img_cont_msg">
          <img src="<%= current_user&.photo %>" class="rounded-circle user_img_msg">
        </div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a class="btn btn-outline-warning my-2 my-sm-0" href="<%= messages_path %>"><%= current_user&.full_name %></a>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-outline-danger my-2 my-sm-0" do %>
          <%= t ('.signout') %>
        <% end %>
        </div>
      </nav>
    <% end %>
    <div class="notification noti-to-<%= current_user&.id %>">
    </div>
    <%= yield %>
  </body>
  <script>
    $(window).scroll(function(){
      $(".Message-light").stop().animate({"marginTop": (($(window).scrollTop() == 0 ? 95 : $(window).scrollTop()) - 100) + "px", "marginLeft":($(window).scrollLeft()) + "px"}, "slow" );
    });
  </script>
</html>
